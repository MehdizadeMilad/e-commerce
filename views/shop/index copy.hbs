<div class="row">
    <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-6">
        <div class="alert alert-success" id="success" {{#if noMessages}}hidden{{/if}}>
            {{successMessage}}
        </div>
    </div>
</div>

{{# each products }}
<div class="row">
    {{# each this}}
    <div class="col-sm-12 col-md-4">
        <div class="thumbnail">
            <img src="{{this.imagePath}}" alt="ps4" class="img-responsive">
            <div class="caption">
                <h3>{{this.title}}</h3>
                <p class="description">{{this.description}}</p>
                <p>
                    <div class="clearfix">
                        <div class="price pull-left">{{this.price}}</div>
                        <button type="button" class="btn btn-primary pull-right" data-toggle="modal" data-target="#product_view"><i
                                class="fa fa-search"></i> ببین
                        </button>
                        <a href='/add-to-cart/{{this._id}}' class="btn btn-success pull-right">Add to Cart</a>
                    </div>
                </p>
            </div>
        </div>
    </div>




    <div class="modal fade product_view" id="product_view">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <a href="#" data-dismiss="modal" class="class pull-right"><span
                            class="glyphicon glyphicon-remove"></span></a>
                    <h3 class="modal-title">{{this.title}}</h3>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6 product_img">
                            <img src="{{this.imagePath}}" class="img-responsive">
                        </div>
                        <div class="col-md-6 product_content">
                            <h4>Product Id: <span>{{this._id}}</span></h4>
                            <div class="rating">
                                <span class="glyphicon glyphicon-star"></span>
                                <span class="glyphicon glyphicon-star"></span>
                                <span class="glyphicon glyphicon-star"></span>
                                <span class="glyphicon glyphicon-star"></span>
                                <span class="glyphicon glyphicon-star"></span>
                                (10 reviews)
                            </div>
                            <p>{{this.description}}</p>
                            <h3 class="cost"><span class="glyphicon glyphicon-usd"></span> {{this.price}} <small
                                    class="pre-cost"><span class="glyphicon glyphicon-usd"></span>{{this.price}}</small>
                            </h3>
                            <div class="row">
                                {{!-- <div class="col-md-4 col-sm-6 col-xs-12">
                                    <select class="form-control" name="select">
                                        <option value="" selected="">Color</option>
                                        <option value="black">Black</option>
                                        <option value="white">White</option>
                                        <option value="gold">Gold</option>
                                        <option value="rose gold">Rose Gold</option>
                                    </select>
                                </div> --}}
                                <!-- end col -->
                                {{!-- <div class="col-md-4 col-sm-6 col-xs-12">
                                    <select class="form-control" name="select">
                                        <option value="">Capacity</option>
                                        <option value="">16GB</option>
                                        <option value="">32GB</option>
                                        <option value="">64GB</option>
                                        <option value="">128GB</option>
                                    </select>
                                </div> --}}
                                <!-- end col -->
                                <div class="col-md-4 col-sm-12">
                                    <select class="form-control" name="select">
                                        <option value="" selected="">QTY</option>
                                        <option value="">1</option>
                                        <option value="">2</option>
                                        <option value="">3</option>
                                    </select>
                                </div>
                                <!-- end col -->
                            </div>
                            <div class="space-ten"></div>
                            <div class="btn-ground">
                                <a href='/add-to-cart/{{this._id}}' class="btn btn-primary"><span
                                        class="glyphicon glyphicon-shopping-cart"></span> Add To Cart</a>
                                <button type="button" class="btn btn-primary"><span
                                        class="glyphicon glyphicon-heart"></span> Add To Wishlist</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>





    {{/each }}
</div>
{{/each}}