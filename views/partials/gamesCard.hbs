<div class="row">
    <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-6">
        <div class="alert alert-success" id="success" {{#if noMessages}}hidden{{/if}}>
            {{successMessage}}
        </div>
    </div>
</div>

{{# each products }}
<div class="row ">
    {{# each this}}
    <div class="col-sm-12 col-md-4">
        <div class="thumbnail">
            <img src="{{this.imagePath}}" alt="ps4" class="img-responsive">
            <div class="caption">
                <h3>{{this.title}}</h3>
                <p class="description">{{this.description}}</p>
                <p>
                    <div class="clearfix">
                        <div class="price pull-left">{{this.price}}</div>
                        <button type="button" class="btn btn-primary pull-right" data-toggle="modal"
                            data-target="#product_view"><i class="fa fa-search"></i> ببین
                        </button>
                        <a href='/add-to-cart/{{this._id}}' class="btn btn-success pull-right">Add to Cart</a>
                    </div>
                </p>
            </div>
        </div>
    </div>
    {{> modals/gameDetailModal}}
    {{/each }}
</div>
{{/each}}