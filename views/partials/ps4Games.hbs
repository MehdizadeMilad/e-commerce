<div class="row">
    <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-6">
        <div class="alert alert-success" id="success" {{#if noMessages}}hidden{{/if}}>
            {{successMessage}}
        </div>
    </div>
</div>

<div class="row">

    {{# each products }}
    <div class="col-sm-6 col-md-4 col-lg-3 mt-4">
        <div class="card wow fadeIn" data-wow-duration="1s">
            <img class="card-img-top mainImageCarousel" src="{{this.imagePath}}">
            <div class="card-block">
                <h4 class="card-title mt-3">{{this.title}}</h4>
                <div class="meta">
                    {{#if this.category}}
                    <a class="badge-info badge-pill">{{this.category}}</a>
                    {{else}}
                    <a class="badge-info badge-pill">no cat</a>
                    {{/if}}
                </div>
                <div class="card-text text-justify rtl">
                    {{trimString this.description 50}} ...
                </div>
            </div>
            <div class="card-footer">
                <a class="float-right" href="/details/{{this.title}}"><small class="shabnam">جزئیات بازی</small></a>
                <button data-toggle="modal" ="hi" data-target="#product_view_{{this._id}}"
                    class="btn btn-secondary float-left btn-sm"><span class="fa fa-search"></span></button>
            </div>
        </div>
    </div>
    {{> modals/gameDetailModal}}

    {{/each }}

</div>