<link href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.min.css" rel="stylesheet"
    id="bootstrap-css">
<script src="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>



{{> alerts/alert}}

<div class="well">
    <ul class="nav nav-tabs" dir="rtl">
        <li class="active"><a href="#home" data-toggle="tab">مشخصات شما</a></li>
        <li><a href="#profile" data-toggle="tab">رمز عبور</a></li>
    </ul>
    <div id="myTabContent" class="tab-content">
        <div class="tab-pane active in" id="home">
            <form action="/user/profile/update" method="POST" id="tab">
                <label>نام و نام‌خانوادگی</label>
                <input type="text" value="{{user.fullName}}" name="fullName" class="input-xlarge" min="5"
                    maxlength="100">
                <label>ایمیل</label>
                <input type="text" value="{{user.email}}" disabled name="email" class="input-xlarge" minlength="6"
                    maxlength="25">
                <label>آدرس کامل پستی</label>
                <textarea value="Smith" rows="3" name="address" class="input-xlarge" minlength="5"
                    maxlength="250">{{user.address}}</textarea>

                <label>کد پستی</label>
                <input type="number" value="{{user.postalCode}}" name="postalCode" class="input-xlarge" minlength="8"
                    maxlength="25">

                <label>شماره همراه</label>
                <input type="text" value="{{user.mobile}}" name="mobile" class="input-xlarge" minlength="10"
                    maxlength="15">

                <label>شماره تلفن ثابت</label>
                <input type="text" value="{{user.tel}}" name="tel" class="input-xlarge" minlength="4" maxlength="25">

                <input type="hidden" name="_csrf" value="{{ csrfToken }}">

                <div>
                    <button class="btn btn-primary">Update</button>
                </div>
            </form>
        </div>
        <div class="tab-pane fade" id="profile">
            <form id="tab2" action="/user/profile/edit/changePassword" method="POST">
                <label>رمز فعلی</label>
                <input type="password" name="currentPassword" class="input-xlarge" required>
                <label>رمز جدید</label>
                <input type="password" name="newPassword" class="input-xlarge" required>
                <label>رمز جدید دوباره</label>
                <input type="password" name="newPasswordConfirm" class="input-xlarge" required>
                <input type="hidden" name="_csrf" value="{{ csrfToken }}">
                <div>
                    <button class="btn btn-primary">تغییر رمز عبور</button>
                </div>
            </form>
        </div>
    </div>